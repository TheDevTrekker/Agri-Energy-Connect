@using Microsoft.AspNetCore.Identity
@using AgriEnergyConnect.Models
@inject UserManager<ApplicationUser> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriEnergyConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriEnergyConnect.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="custom-navbar">
            <div class="custom-container">
                <!-- Logo -->
                <div class="navbar-left">
                    <a class="custom-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/Logo-Agri.png" alt="AgriEnergyConnect Logo" class="custom-logo" />
                        <span class="brand-text">Agri-Energy Connect</span>
                    </a>
                </div>

                <!-- Hamburger Button (Mobile) -->
                <button class="hamburger" id="hamburger">&#9776;</button>

                <!-- Main Navigation -->
                <div class="navbar-menu" id="navbarMenu">
                    <!-- Center links -->
                    <div class="navbar-center">
                        <ul class="custom-nav">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @if (User.IsInRole("Farmer"))
                                {
                                    <li><a href="/Farmer/Dashboard">Dashboard</a></li>
                                }
                                else if (User.IsInRole("Employee"))
                                {
                                    <li><a href="/Employee/Dashboard">Dashboard</a></li>
                                    <li><a href="/Employee/AddFarmer">Add Farmer</a></li>
                                    <li><a href="/Employee/ViewProducts">View Products</a></li>
                                }
                            }
                        </ul>
                    </div>

                    <!-- Right links -->
                    <div class="navbar-right">
                        <ul class="custom-nav">
                            @if (User.Identity.IsAuthenticated && currentUser != null)
                            {
                                <li class="nav-item d-flex align-items-center">
                                    <a class="nav-link d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Account">
                                        <img src="~/images/svg_account.svg" alt="Account Icon" width="20" height="20" class="me-1" />
                                        <span>@currentUser.FullName</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>


    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2025 - AgriEnergyConnect - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    const hamburger = document.getElementById('hamburger');
    const navbarMenu = document.getElementById('navbarMenu');

    hamburger.addEventListener('click', () => {
        navbarMenu.classList.toggle('show');
    });
</script>
