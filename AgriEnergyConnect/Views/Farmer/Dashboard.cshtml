@model AgriEnergyConnect.Models.ViewModel.FarmerDashboardViewModel

@{
    ViewData["Title"] = "Farmer Dashboard Page";
}

<h3>Add a New Product</h3>
<form asp-action="AddProduct" method="post">
    <div class="form-group">
        <label>Name</label>
        <input name="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Category</label>
        <input name="Category" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Production Date</label>
        <input name="ProductionDate" type="date" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Add Product</button>
</form>

<hr />

<h3>Your Products</h3>
@if (Model.Products.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Production Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.ProductionDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products yet.</p>
}