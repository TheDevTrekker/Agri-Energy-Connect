@using Microsoft.AspNetCore.Identity
@using AgriEnergyConnect.Models
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
    var currentUser = await UserManager.GetUserAsync(User);
}
<style>
    .text-green {
        font-family: 'Bookman Old Style';
        color: #28a745; /* Match your navbar green */
    }

    .custom-btn {
        border: 1px solid black;
        background-color: transparent;
        color: black;
        padding: 12px 12px;
        transition: all 0.3s ease-in-out;
        text-transform: uppercase;
    }

        .custom-btn:hover {
            background-color: #28a745;
            border-color: #28a745;
            color: white;
        }
</style>

<div class="container py-5">
    @if (currentUser == null)
    {
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center">
                    <h1 class="mb-4">Welcome to <span class="text-green">Agri-Energy</span> Connect</h1>
                    <p class="lead">Log in or register to explore farmer profiles, products, and green tech solutions.</p>

                    <a class="btn btn-primary btn-lg m-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    <a class="btn btn-outline-secondary btn-lg m-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            @if (User.IsInRole("Farmer"))
            {
                <div class="content position-relative">
                    <h1 class="display-3 fw-bold">
                        We Are <span class="text-green">Connected</span>
                    </h1>
                    <p class="lead mb-4">Linking farmers and energy innovators through Agri-Energy Connect</p>
                    <a class="btn btn-outline-light btn-lg custom-btn" asp-controller="Farmer" asp-action="Dashboard">Get Started</a>
                </div>
            }
            else if (User.IsInRole("Employee"))
            {
                <div class="content position-relative">
                    <h1 class="display-3 fw-bold">
                        We Are <span class="text-green">Connected</span>
                    </h1>
                    <p class="lead mb-4">Linking farmers and energy innovators through Agri-Energy Connect</p>
                    <a class="btn btn-outline-light btn-lg custom-btn" asp-controller="Employee" asp-action="Dashboard">Get Started</a>
                </div>
            }
        </div>
    }
</div>
